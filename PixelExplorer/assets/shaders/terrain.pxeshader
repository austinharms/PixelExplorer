#shader vertex
#version 330 core

layout(location = 0) in vec3 position;
uniform mat4 u_MVP;

out vec4 v_Color;

void main() {
	gl_Position = u_MVP * vec4(position, 1.0);
  v_Color = vec4(float(int(position.x) % 15) / 15.0f, float(int(position.y) % 15) / 15.0f, float(int(position.z) % 15) / 15.0f, 1.0);
};

#shader fragment
#version 330 core

layout(location = 0) out vec4 color;

in vec4 v_Color;

void main() {
  color = v_Color;
};
